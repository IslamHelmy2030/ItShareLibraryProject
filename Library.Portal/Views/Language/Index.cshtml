@model IEnumerable<ILanguageDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Languages List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LanguageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageName)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.LanguageId">Edit</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.LanguageId">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.LanguageId">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
