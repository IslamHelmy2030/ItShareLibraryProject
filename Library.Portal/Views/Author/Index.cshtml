@model IEnumerable<Library.Domain.Dto.Interfaces.IAuthorDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenderName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-info">Edit</a>
                <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
